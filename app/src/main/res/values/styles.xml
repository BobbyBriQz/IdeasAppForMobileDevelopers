
<resources >


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#E0E0E0</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">#353535</item>
        <item name="activityBackgroundTint">@color/white</item>
        <item name="headerTextColor">@color/white</item>
        <item name="headerBackgroundColor">#353535</item>
        <item name="appBarColor">@color/white</item>
        <item name="editTextBackgroundColor">@color/white</item>
        <item name="editTextBGColor">@color/black</item>
        <item name="iconsTint">#353535</item>


    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="primaryTextColor">#ffffff</item>
        <item name="activityBackgroundTint">@color/black</item>
        <item name="headerTextColor">#353535</item>
        <item name="headerBackgroundColor">#EBC6A6</item>
        <item name="appBarColor">#252525</item>
        <item name="editTextBackgroundColor">#474747</item>
        <item name="editTextBGColor">#B4B4B4</item>
        <item name="iconsTint">#CACACA</item>

    </style>


</resources>
